{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["~/.config/opencode/plugin/shell-strategy/shell_strategy.md"],
  "plugin": [
    "opencode-pty",
    "@tarquinen/opencode-dcp@latest",
    "@franlol/opencode-md-table-formatter@0.0.3"
  ],
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "task": "deny"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    }
  }
}
